<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <style>
   body {
    font-family: "Inter", sans-serif;
   }
    </style>
    <script>

        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'dark-bg': '#1a1a1a',
                        'dark-secondary': '#2a2a2a',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 dark:bg-dark-bg text-gray-800 dark:text-gray-200">
<div id="page-loader" class="fixed inset-0 bg-white dark:bg-dark-bg flex items-center justify-center z-50 opacity-100 transition-opacity duration-500">
        <svg class="animate-spin h-10 w-10 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    </div>
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside id="sidebar" class="bg-white dark:bg-dark-secondary w-64 h-screen fixed left-0 top-0 transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 z-20">
            <div class="flex items-center justify-between p-4 border-b dark:border-gray-700">
                <h2 class="text-xl font-semibold">Dashboard</h2>
                <button id="closeSidebar" class="lg:hidden">
                    <i class="ri-close-line text-2xl"></i>
                </button>
            </div>
            <nav class="p-4 space-y-2">
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-home-line mr-2"></i>Home
                </a>
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-bar-chart-2-line mr-2"></i>Analytics
                </a>
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-user-line mr-2"></i>Customers
                </a>
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-shopping-bag-line mr-2"></i>Products
                </a>
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-file-text-line mr-2"></i>Documents
                </a>
                <a href="#" class="flex items-center py-2 px-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded">
                    <i class="ri-settings-line mr-2"></i>Settings
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col lg:ml-64">
            <!-- Navbar -->
            <header class="bg-white dark:bg-dark-secondary shadow-sm">
                <div class="flex items-center justify-between p-4">
                    <div class="flex items-center space-x-4">
                        <button id="openSidebar" class="lg:hidden">
                            <i class="ri-menu-line text-2xl"></i>
                        </button>
                        <h1 class="text-xl font-semibold">Dashboard</h1>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <input type="text" placeholder="Search..." class="w-full sm:w-64 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <i class="ri-search-line absolute right-3 top-2.5 text-gray-500"></i>
                        </div>
                        <button class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700">
                            <i class="ri-notification-3-line text-xl"></i>
                        </button>
                        <div class="relative" x-data="{ open: false }">
                            <button @click="open = !open" class="flex items-center space-x-2">
                                <img src="https://placekitten.com/32/32" alt="User avatar" class="w-8 h-8 rounded-full">
                                <span class="hidden sm:inline-block">John Doe</span>
                                <i class="ri-arrow-down-s-line"></i>
                            </button>
                            <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white dark:bg-dark-secondary rounded-md shadow-lg py-1">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Profile</a>
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Settings</a>
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto p-6">
                <div class="container mx-auto">
                    <h2 class="text-2xl font-semibold mb-6">Dashboard Overview</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white dark:bg-dark-secondary rounded-lg shadow-md p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Users</p>
                                    <p class="text-2xl font-bold">1,234</p>
                                </div>
                                <div class="bg-blue-500 rounded-full p-3">
                                    <i class="ri-user-line text-white text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white dark:bg-dark-secondary rounded-lg shadow-md p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Revenue</p>
                                    <p class="text-2xl font-bold">$5,678</p>
                                </div>
                                <div class="bg-green-500 rounded-full p-3">
                                    <i class="ri-money-dollar-circle-line text-white text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white dark:bg-dark-secondary rounded-lg shadow-md p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Active Projects</p>
                                    <p class="text-2xl font-bold">42</p>
                                </div>
                                <div class="bg-yellow-500 rounded-full p-3">
                                    <i class="ri-folder-line text-white text-xl"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Activity -->
                    <div class="mt-8">
                        <h3 class="text-xl font-semibold mb-4">Recent Activity</h3>
                        <div class="bg-white dark:bg-dark-secondary rounded-lg shadow-md p-6">
                            <ul class="space-y-4">
                                <li class="flex items-center space-x-3">
                                    <img src="https://placekitten.com/40/40" alt="Alice Johnson" class="w-10 h-10 rounded-full">
                                    <div>
                                        <p class="font-medium">Alice Johnson</p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Created a new project</p>
                                    </div>
                                    <span class="text-sm text-gray-500 dark:text-gray-400 ml-auto">2 hours ago</span>
                                </li>
                                <li class="flex items-center space-x-3">
                                    <img src="https://placekitten.com/41/41" alt="Bob Smith" class="w-10 h-10 rounded-full">
                                    <div>
                                        <p class="font-medium">Bob Smith</p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Uploaded a document</p>
                                    </div>
                                    <span class="text-sm text-gray-500 dark:text-gray-400 ml-auto">4 hours ago</span>
                                </li>
                                <li class="flex items-center space-x-3">
                                    <img src="https://placekitten.com/42/42" alt="Charlie Brown" class="w-10 h-10 rounded-full">
                                    <div>
                                        <p class="font-medium">Charlie Brown</p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Completed a task</p>
                                    </div>
                                    <span class="text-sm text-gray-500 dark:text-gray-400 ml-auto">1 day ago</span>
                                </li>
                                <li class="flex items-center space-x-3">
                                    <img src="https://placekitten.com/43/43" alt="Diana Prince" class="w-10 h-10 rounded-full">
                                    <div>
                                        <p class="font-medium">Diana Prince</p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Commented on a project</p>
                                    </div>
                                    <span class="text-sm text-gray-500 dark:text-gray-400 ml-auto">2 days ago</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script>

document.addEventListener('DOMContentLoaded', function() {

const loader = document.getElementById('page-loader');
setTimeout(() => {
    loader.classList.replace('opacity-100', 'opacity-0'); // Fade out
    setTimeout(() => {
        loader.style.display = 'none'; // Remove from flow
    }, 200); // Wait for the fade-out transition to finish
}, 1000); // Show loader for 1.5 seconds



});

        document.getElementById('openSidebar').addEventListener('click', function() {
            document.getElementById('sidebar').style.transform = 'translateX(0)';
        });
        document.getElementById('closeSidebar').addEventListener('click', function() {
            document.getElementById('sidebar').style.transform = 'translateX(-100%)';
        });
    </script>
</body>
</html>
